<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
 
    body{
        padding-left: 10px;
        padding-right: 20px;
        padding-bottom: 50px;
    }

    .center{
        width: 100%;
        display: flex; 
        justify-content: center;
        align-items: center; 
    }

    .post{
        background-color: #E3F4EE;
        border: 1px solid #5ACC90;
        width: 100%;
        height: auto;
        display: flex; 
        flex-direction: column;
        border-radius: 3px;
        margin-top: 20px;
    }

    .post_indicator{
        background-color: #5ACC90;
        height: 30px;
        font-size:small;  
        justify-content: center;
        align-items: center; 
        display: flex;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: bold;
        border-radius: 3px;
        margin: 4px;
        color: white; 
        width: 70px;
        cursor: pointer;
    }

    .title{
        display: flex;
        flex-direction: row; 
        height: 100%;
        align-items: center; 
    }

    .url{
        font-family: 'Courier New', Courier, monospace;
        font-size: medium;  
        font-weight: bold;
        color: black; 
        margin-left: 20px;
    }
    .copytext{

        font-family: 'Courier New', Courier, monospace;
        font-size: medium;  
        font-weight: bold;
        color: black; 
        margin-left: 20px;
    }

    input {
        border-top-style: hidden;
        border-right-style: hidden;
        border-left-style: hidden;
        border-bottom-style: hidden;
        background-color: transparent;
        width: 100%;
        outline: none; 
    }

    .request_title{
        background-color: white;
        width: 100%;
        height: 40px;
        display: flex;
        flex-direction: row;  
        align-items: center; 
        font-family: 'Courier New', Courier, monospace;
        font-size: small;  
        font-weight: bold;
        color: black;   
    }

    .request{
        background-color: black;
        border-radius: 3px;
        color: white;
        font-family: 'Courier New', Courier, monospace;
        font-size: small;  
        font-weight: bold;
        flex-direction: row;  
        align-items: center; 
        margin: 8px;
        padding-left: 10px; 
        height: 40px; 
        display: flex;
        align-items: center;
    }

    #viewDiv{ 
        display: none; 
    }

    #uploadDiv{ 
        display: none; 
    }

    #updateDiv{ 
        display: none; 
    }

    #deleteDiv{ 
        display: none; 
    }
</style>
<body >
    <div class="center" >
        <h1>Image Uploader Documentation</h1>
    </div>
    <div style="margin-top: 70px;" > 
        <div class="post">
            <div class="title" >
                <div onclick="myFunction('viewDiv')"  class="post_indicator" >
                    <p>POST</p>
                </div> 
                <input  class="url" type="text" value='https://image-uploder.herokuapp.com/api/view_image' id="view" readonly>
                <p style="cursor: pointer; margin-right: 20px;" id="toolview" class="tooltip copytext" onclick="copyfile('view', 'toolview')" onmouseout="outFunc('toolview')">Copy</p>
            </div>
            <div id='viewDiv' >
                <div class="request_title">
                    <p style="margin-left: 20px;" >Request body<span style="color: red;" >*</span></p>
                </div>
                <div class="request">
                    <p>body: JSON.stringify({ 
                        data: 'string' 
                    })</p>
                </div>
            </div>
        </div>
        <div class="post">
            <div class="title" >
                <div onclick="myFunction('uploadDiv')" class="post_indicator" >
                    <p>POST</p>
                </div> 
                <input  class="url" type="text" value='https://image-uploder.herokuapp.com/api/image/upload' id="upload" readonly>
                <p style="cursor: pointer; margin-right: 20px; color:chartreuse" id="toolupload" class="tooltip url" onclick="copyfile('upload', 'toolupload')" onmouseout="outFunc('toolupload')">Copy</p>
            </div> 
            <div id="uploadDiv"> 
                <div class="request_title">
                    <p style="margin-left: 20px;" >Request body<span style="color: red;" >*</span></p>
                </div>
                <div class="request">
                    <p> body: JSON.stringify({ 
                        data: {
                            url: base64EncodedImage,
                            name: 'string'   
                        }
                    })</p>
                </div>
            </div>
        </div>
        <div class="post">
            <div class="title" >
                <div onclick="myFunction('updateDiv')" class="post_indicator" >
                    <p>POST</p>
                </div> 
                <input  class="url" type="text" value='https://image-uploder.herokuapp.com/api/image/update' id="update" readonly>
                <p style="cursor: pointer; margin-right: 20px; color:chartreuse" id="toolupdate" class="tooltip url" onclick="copyfile('update', 'toolupdate')" onmouseout="outFunc('toolupdate')">Copy</p>
            </div>
            <div id="updateDiv"> 
                <div class="request_title">
                    <p style="margin-left: 20px;" >Request body<span style="color: red;" >*</span></p>
                </div>
                <div class="request">
                    <p>body: JSON.stringify({ 
                        data: { 
                            name: 'string',
                            newname: 'string',  
                            url: 'string' || base64EncodedImage
                        }
                    })</p>
                </div>
            </div>
        </div>
        <div class="post">
            <div class="title" >
                <div onclick="myFunction('deleteDiv')" class="post_indicator" >
                    <p>POST</p>
                </div> 
                <input  class="url" type="text" value='https://image-uploder.herokuapp.com/api/image/delete' id="delete" readonly>
                <p style="cursor: pointer; margin-right: 20px; color:chartreuse" id="tooldelete" class="tooltip url" onclick="copyfile('delete', 'tooldelete')" onmouseout="outFunc('tooldelete')">Copy</p>
            </div>
            <div id="deleteDiv"> 
                <div class="request_title">
                    <p style="margin-left: 20px;" >Request body<span style="color: red;" >*</span></p>
                </div>
                <div class="request">
                    <p>body: JSON.stringify({ 
                        data: { 
                            name: 'string'   
                        }
                    })</p>
                </div>
            </div>
        </div>
    </div>

    <script>

        function myFunction(file) { 
            var x = document.getElementById(file);
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }
        }

        function copyfile(file, tool) {
            var copyText = document.getElementById(file); 
            copyText.select();
            copyText.setSelectionRange(0, 99999);
            document.execCommand("copy");
            
            var tooltip = document.getElementById(tool);
            tooltip.innerHTML = "Copied"
        }

        function outFunc(tool) {
            var tooltip = document.getElementById(tool);
            tooltip.innerHTML = "Copy";
        }

    </script>
</body>
</html>